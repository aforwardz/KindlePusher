/* pages/account/account.wxss */
 page {
   background: url('https://kindlepusher.cn/media/bg.jpg');
  background-position: center;
  background-size: cover;  
  background-attachment: fixed; 
} 

 /* @keyframes kf-marque-animation { 0% { transform: translateX(0); } 100% { transform: translateX(-33.3%); } }  */

.marquee{
  width: 100%;
  height: 80rpx;
  display: block;
  position: relative;
}
.marquee .content{
  white-space: nowrap;
  position: absolute;
  font-size: 28rpx;
  top: 0;
}


.userinfo {
    margin-top: 30rpx;
    height: 30%;
    width: 80%;
    /* background: #FFF; */
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    border-radius: 100%;
}

.userinfo-nickname {
    margin-top: 20rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #007AFF;
}

.location {
  margin-top: 10px;
  font-weight: 300;
  width: 80%;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.location text {
  display: flex;
  width: 45%;
  color: #007AFF;
  justify-content: center;
  align-items: center;
}

.data-item {
  margin-top: 20rpx;
  align-items: row;
}

.active-table {
  width: 100%;
  height: 100px;
  margin-top: 3rem;
  border: 0px solid; 
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    font-size: 44rpx;
    justify-content: center;
    text-align: center;
    /* border: 1px gray;
    border-style: dotted none none none; */
}
.heading{
  font-size: 40rpx;
  background: none; 
}
.content{
  /* background: #E6F3F9; */
}
.th {
  width: 40%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.kindle-email {
  margin-top: 4rem;
  width: 80%;
  height: 20px;
  text-align: center;
}

.author {
  width: 60%;
  position: absolute;
  bottom: 2px;
  color: #fff;
  font-size: small;
  text-align: center;
}