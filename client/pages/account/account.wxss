/* pages/account/account.wxss */

page {
  background: url('http://127.0.0.1:8000/media/bg.jpg');
  background-size: cover;  
  background-attachment: fixed;
}

.userinfo {
    margin-top: 20rpx;
    height: 300rpx;
    width: 50%;
    /* background: #FFF; */
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    border-radius: 100%;
}

.userinfo-nickname {
    margin-top: 20rpx;
    font-size: 40rpx;
    color: #007AFF;
}

.data-item {
  margin-top: 20rpx;
  align-items: row;
}