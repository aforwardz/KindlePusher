.marquee{
  width: 100%;
  height: 80rpx;
  display: block;
  position: relative;
}
.marquee .content{
  white-space: nowrap;
  position: absolute;
  font-size: 28rpx;
  top: 0;
}

.seperator {
  width: 100%;
  height: 10rpx;
  background-color: #E8E8E8;
}

.userinfo-wrapper {
  margin-top: 30rpx;
  height: 200rpx;
  width: 100%;
}

.userinfo {
    margin: 20rpx;
    /* height: 30%;
