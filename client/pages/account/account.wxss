  height: 100rpx;
  align-items: center;
}

.kpcoin-wrapper {
  width: 80%;
  height: 120rpx;
  text-align: center;
  line-height: 3;
  font-size: 42rpx;
  font-weight: bold;
}

.kpcoin-wrapper .kpcoin-title {
  color: gray
}

.operation {
  width: 80%;
  height: 100rpx;
