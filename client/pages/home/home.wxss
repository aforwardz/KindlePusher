/* pages/home/home.wxss */
.container {
  overflow-x: hidden;
  overflow-y: hidden;
}
.decoration-wrapper {
  width: 100%;
  /* height: 140px; */
  background-color: #C7F2E4; 
}

.decoration {
  text-align: center
}

.decoration .title {
  font-size: 30px;
  color: white;
  font-weight: 900;
}

.menu-wrapper {
  margin-top: 5px;
  width: 100%;
  height: 80px;
  display: inline-flex;
  justify-content: space-around;
}

.menu-wrapper .menu-icon {
  width: 50px;
  height: 80px;
} 

.home-container {
  width: 100%;
  margin-top: 1rem;
}

.pin-bar {
  width: 100%;
  display: inline-flex;
}

.pin-bar image {
  margin: 2px;
}

.pin-bar .title {
  width: 90%;
  margin-left: 2px;
  text-align: left;
  font-size: 22px;
  color: black;
  font-weight: bolder;
  line-height: 1.6;
}
.pin-bar .title text{
  border-bottom: 1px solid #1296db;
}

.seperator {
  width: 100%;
  height: 5px;
  background-color: #E8E8E8;
}

.latest-wrapper {
  width: 100%;
  display: inline-flex;
  padding: 12px 0px;
  border-bottom: 2px solid #E8E8E8
}

.poster-thumb {
  width: 450rpx;
  /* height: 150px; */
  margin-left: 10px;
  margin-right: 10px;
  box-shadow:4px 4px 15px gray;
}

.latest-info {
  width: 100%;
  margin-right: 20px;
}

.latest-info .latest-name {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  line-height: 3;
}

.latest-info .publisher {
  font-size: 18px;
  text-align: center;
}

.latest-info .latest-date {
  font-size: 18px;
  color: green;
  text-align: center;
  line-height: 3;
}

.recommend-wrapper {
  width: 100%;
  display: inline-flex;
  padding: 12px 0px;
  border-bottom: 2px solid #E8E8E8
}

.recommend-info {
  width: 100%;
  margin-right: 20px;
}

.recommend-info .recommend-name {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  /* line-height: 3; */
}

.recommend-info .recommend-author {
  font-size: 18px;
  color: green;
  text-align: center;
  line-height: 2;
}

.recommend-info .recommend-type {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  line-height: 2;
}

.recommend-info .recommend-issue_date {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.rank-wrapper {
  width: 100%;
  display: inline-flex;
  padding: 6px 0px;
}

.rank-info {
  width: 95%;
  display: inline-flex;
}

.rank-info .rank-index {
  width: 10%;
  margin-left: 20px;
  font-size: 20px;
  font-weight: bold;
}

.rank-info .rank-name {
  width: 70%;
  font-size: 20px;
  font-weight: bold;
}

.rank-info .rank-ranking {
  width: 20%;
  font-size: 18px;
  color: green;
  text-align: right;
  display: inline-flex;
}

.rank-info text {
  line-height: 1.5
}

.rank-info .star {
  width: 25px;
  height: 25px;
}

.free-wrapper {
  width: 100%;
  padding: 6px 0px;
  display: inline-flex;
}

.free-info {
  width: 90%;
  display: inline-flex;
}

.free-info .free-index {
  margin-left: 20px;
  width: 10%;
  font-size: 20px;
  font-weight: bold;
  text-align: left;
}

.free-info .free-name {
  width: 80%;
  font-size: 20px;
  font-weight: bold;
  text-align: left;
}

.free_icon {
  width: 30px;
  height: 30px;
  text-align: right;
}
