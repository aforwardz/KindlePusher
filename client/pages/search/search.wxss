/* pages/search/search.wxss */
page {
  background: url('http://127.0.0.1:8000/media/bg.jpg');
  background-size: cover;  
  background-attachment: fixed;
}

.session-search {
    width: 100%; 
    height: 80rpx;
    background-color: #ddd; 
    border-radius: 10rpx;
    border-width: 10rpx; 
    border-color: blue;
    display: flex;
    flex-direction: center;
    justify-content: flex-start;
}

.search-icon {
  margin: 24rpx 15rpx;
}

.search-content {
  background-color: white; 
  flex: 1;
  margin-left: 1rpx;
  margin-top: 8rpx;
  color: #4a4a4a;
  font-size: 28rpx;
  height: 80%;
  padding-left: 5px;
}

.search-placeholder {
  color: #9e9e9e;
  font-size: 28rpx;
  /* margin-left: 5px; */
}

.search-clear {
  background-color: white;
  margin-top: 4px;
  margin-bottom: 4px;
  padding-top: 6px;
  width: 7%;
}

.search-start {
  color: #9e9e9e;
  display: flex;
  padding-top: 10px;
  padding-left: 4px;
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.session-book {
  padding: 10px;
  width: 90%;
}

.book-wrapper {
  border: groove;
  border-radius: 15px; 
  margin-bottom: 10px;
}

.book-summary {
  margin: 0px 10px 10px 10px;
}

.book-content {
  margin: 10px;
  display: flex;
}

.poster {
  width: 120px;
  height: 120px;
  margin-right: 10px;
}

.breif-intro {
  width: 60%;
  align-items: center;
}

.breif-intro .book-name {
  width: 100%;
  color: blue;
  /* font-size: 16px; */
  text-align: center;
}

.breif-intro .book-author {
  width: 50%;
  color: black;
  font-size: 20px;
}

.book-info {
  display: flex;
}

.book-info .book-date {
  width: 60%;
  color: gray;
  font-size: 18px;
}

.book-info .book-rate {
  width: 40%;
  color: red;
  font-size:22px;
  text-align: right;
}

.book-formats {
  text-align: center;
}

