/* pages/search/search.wxss */
.session-search {
    width: 100%; 
    height: 80rpx;
    background-color: #ddd; 
    /* border-radius: 10rpx; */
    border-width: 10rpx; 
    border-color: blue;
    display: flex;
    flex-direction: center;
    justify-content: flex-start;
}

.search-icon {
  margin: 24rpx 15rpx;
}

.search-tab {
  margin-left: 1px;
  margin-top: 5px;
  margin-bottom: 5px;
  width: 83%;
  display: inline-flex;
}

.search-content {
  background-color: white; 
  color: #4a4a4a;
  font-size: 28rpx;
  height: 100%;
  padding-left: 5px;
  width: 100%;
}

.search-placeholder {
  color: #9e9e9e;
  font-size: 28rpx;
  /* height: 80%; */
  /* margin-left: 5px; */
}

.search-clear {
  background-color: white;
  padding: 7px 4px 0 4px;
}

.search-start {
  color: #9e9e9e;
  display: flex;
  padding-top: 10px;
  padding-left: 4px;
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.seperator {
  width: 100%;
  height: 5px;
  background-color: #E8E8E8;
}

.search-default {
  width: 100%;
  margin-top: 0.5rem;
}

.hot-search {
  padding: 0.5rem;
}

.title {
  width: 100%;
  display: inline-flex;
}

.title image {
  width: 50rpx;
  height: 50rpx;
}

.title .title-content {
  width: 90%;
  margin-left: 3px;
  text-align: left;
  font-size: 36rpx;
  color: black;
}
.title .title-content text{
  border-bottom: 1px solid #1296db;
}

.hot-search .hot-label {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #E8E8E8;
  margin: 0.5rem 0;
}

.label {
  width: 150rpx;
  text-align: center;
  margin-top: 5px;
  margin-bottom: 8px;
  font-size: 30rpx;
  flex:auto;  
}

.label text {
  padding-left: 4px;
  padding-right: 4px;
  background-color: #66ffcc;
  box-shadow: 3px 2px 3px gray;
}

.guess-search {
  /* width: 100%; */
  margin: 1rem 0.5rem 0.5rem 0.5rem;
}

.guess-search .guess-label {
  margin: 10px;
  padding-bottom: 0.5rem;
}

.guess-item {
  margin-bottom: 0.5rem;
  font-size: 30rpx;
  background-color: lightskyblue;
}

.guess-item .likely {
  float: right;
  color: gray;
}

.session-book {
  margin-top: 0.5rem;
  width: 100%;
}

.session-book .title image {
  margin-left: 4px;
  margin-right: 4px;
}

.search-count {
  width: 100%;
  margin-top: 0.5rem;
  padding-bottom: 0.5rem;
  text-align: center;
  font-size: 32rpx;
  color: gray;
  /* border-bottom: 1px dotted gray; */
}

.feedback {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: gray;
  margin-bottom: 20rpx;
}

.book-wrapper {
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:center;
}

.book-item {
  width: 49%;
  /* display: flex; */
}

.book-container {
  width: 100%;
  display: flex;
  padding: 24rpx 0px;
  /* background-color: #C7F2E4; */
}

.poster {
  width: 180rpx;
  height: 225rpx; 
  margin-left: 10rpx;
  margin-right: 10rpx;
  box-shadow:4px 4px 15px gray;
}

.breif-intro {
  width: 160rpx; 
  display: flex;
  flex-direction: column;
  text-align: center;
}

.breif-intro .book-name {
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
}

.breif-intro .book-author {
  font-size: 24rpx;
  color: green;
  text-align: center;
  line-height: 1.5;
}

.breif-intro .book-date {
  color: orange;
  font-size: 24rpx;
  margin-top: 10rpx;
  /* line-height: 1.6 */
}

.breif-intro .book-rate {
  color: red;
  font-size:24rpx;
  margin-top: 10rpx;
}


